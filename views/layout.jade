          errors = errors.split(',');
          for (var i = 0; i < errors.length; i++) {
            toastr.error(errors[i], "", {"positionClass": "toast-bottom-center"});
          }
        }

        var successes = '#{successes}';
        if (successes != '') {
          successes = successes.split(',');
